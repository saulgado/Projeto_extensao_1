<h1>Editar cliente</h1>
<form action="/clientes/editar" method="POST">
  <input type="text" name="id" placeholder="" value="{{cliente.id}}" style="visibility: hidden;">
  <div class="form-control">
    <label for="nome">Nome:</label>
    <input type="text" name="nome" placeholder="Nome completo do cliente" value="{{cliente.nome}}">
  </div>
  <div class="form-control">
    <label for "numero_cell">Celular:</label>
    <input type="text" name="numero_cell" placeholder="Digite seu número de celular: (XX) XXXXX-XXXX" value="{{cliente.celular}}">
  </div>
  <div class="form-control">
    <label for="email">Email:</label>
    <input type="email" name="email" placeholder="Digite seu email ou endereço eletrônico:" value="{{cliente.email}}">
  </div>
  <div class="form-control">
    <label for="cpf">CPF:</label>
    <input type="text" name="cpf" placeholder="Digite seu CPF:" value="{{cliente.cpf}}">
  </div>
  <input type="submit" value="Salvar">
</form>
