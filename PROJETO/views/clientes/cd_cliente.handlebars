<h1>Cadastrando cliente</h1>
<form action="/clientes/cd_cliente" method="POST">
  <div class="form-control">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" placeholder="Nome completo do cliente">
  </div>
  <div class="form-control">
    <label for="numero_cell">Celular:</label>
    <input type="text" id="numero_cell" placeholder="Digite seu numero de celular: (XX) XXXXX-XXXX">
  </div>
  <div class="form-control">
    <label for="email">Email:</label>
    <input type="email" id="email" placeholder="Digite seu email ou endereço eletrônico:">
  </div>
  <div class="form-control">
    <label for="cpf">CPF:</label>
    <input type="text" id="cpf" placeholder="Digite seu CPF:">
  </div>
  <input type="submit" value="Cadastrar">
</form>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  const inputNome = document.getElementById('nome')
  const inputNumero = document.getElementById('numero_cell')
  const inputEmail = document.getElementById('email')
  const inputCpf = document.getElementById('cpf')
  const botaoCadastrar = document.getElementById('Cadastrar')

  function clicarbotaosalvar() {
    const cliente = {
      nome: inputNome.value,
      celular: inputNumero.value,
      email: inputEmail.value,
      cpf: inputCpf.value
    }
    console.log(cliente)

    axios
      .post('http://localhost:3000/clientes/cd_cliente', cliente)
      .then(() => {
      })
      .catch((error) => {
        console.log(error)
      })
  }
</script>