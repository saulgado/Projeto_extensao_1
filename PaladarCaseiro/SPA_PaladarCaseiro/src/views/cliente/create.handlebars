{{!-- Seção de conteúdo da página --}}
<div class="container mt-4 w-80">
    <h1 class="mb-4">Adicionar Cliente</h1>
    <form id="createClienteForm" enctype="multipart/form-data" method="post">
        <div class="form-group mb-3">
            <label for="createNome">Nome</label>
            <input type="text" class="form-control" id="createNome" name="nome" required>
        </div>
        <div class="form-group mb-3">
            <label for="createCelular">Celular</label>
            <input type="text" class="form-control" id="createCelular" name="celular" required>
        </div>
        <div class="form-group mb-3">
            <label for="createEmail">Email</label>
            <input type="text" class="form-control" id="createEmail" name="email" required>
        </div>
        <div class="form-group mb-3">
            <label for="createCpf">CPF</label>
            <input type="text" class="form-control" id="createCpf" name="cpf" required>
        </div>
        <div class="form-group mb-3">
            <label for="createOrdem">Ordem</label>
            <input type="number" class="form-control" id="createOrdem" name="ordem" required>
        </div>
        <!-- Campo oculto para armazenar o ID do professor -->
        <a  href="../clientes/" class="btn btn-secondary" id="cancelCreateCliente"><i class="bi bi-x-circle"></i> Cancelar</a>
        <button  type="button" class="btn btn-primary" id="saveCreateCliente" onclick="CreateClienteClick(event)"><i class="bi bi-check-circle"></i> Salvar</button>
    </form>
</div>
<!-- Scripts do formulário professor -->
<script src="../js/clienteScripts.js"></script> 
